<div class="table-responsive">
  <table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Produit</th>
      <th>Titre</th>
      <th>Description</th>
      <th>Quantit√©</th>
      <th>Prix</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart.item_carts.each do |item_cart|%>
      <tr>
        <td><%= image_tag  item_cart.item.cat_image, alt: 'cat', class: "card-img-top", style: "width: 8rem; height: 9rem;"%></td>
        <td><%= item_cart.item.title%></td>
        <td><%= truncate(item_cart.item.description, length: 140) %></td>
        <td><%= item_cart.quantity%></td>
        <td><%= number_to_currency(item_cart.total_price) %></td>
        <th><%= link_to "Voir ".html_safe, item_path(item_cart.item.id)%></th>
        <td><%= link_to "<i class='fas fa-trash'></i>".html_safe, item_cart, method: :delete, data: { confirm: "Are you sure? " }, style: "color: red; float: right" %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  
 </div>

